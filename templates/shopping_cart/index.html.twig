{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <div class="container mt-4">
    <div class="content1 text-center"></div>
        <h1>Your Cart</h1>
        {% for product in products %}
            <div class="row border-top border-bottom">
                <div class="row main align-items-center">
                    <div class="col-2"><img id="cartimage" class="img-fluid" src="{{asset('pictures/'~ product.fkProduct.image)}}"></div>
                    <div class="col">
                        <div class="row text-muted">{{product.fkProduct.name}}</div>
                        <div class="row">{{product.fkProduct.availability}}</div>
                        <a class="btn btn-danger" href="{{ path('app_product_delete_cart', {'id': product.id}) }}">delete<span class="close">&#10005;</span></a>
                    </div>
                    
                    <div class="col">&euro;{{ product.fkProduct.price}}</div>
                </div>
            </div>
        {% endfor %}
    </div>
    
    <div class="col-md-4">
        <div class="card mt-4 mt-md-0">
            <h5 class="card-header bg-dark text-white">Summary</h5>
            {% for product in products %}
            <div class="row text-muted">{{product.fkProduct.name}}</div>
           <div class="col text-end"><span>&euro;{{ product.fkProduct.price}}<span><a class="btn btn-danger" href="{{ path('app_product_delete_cart', {'id': product.id}) }}">delete</a></div>
           {% endfor %}
           {# {{ product.fkDiscount.amount}} #}
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between">
                    <div><b>Total</b></div>
                {# <span><b>{{ product.total }} â‚¬</b></span> #}
                </li>
            </ul>
            <div class="card-body">
                <a href="{{ path('app_add_order') }}" class="btn btn-warning w-100">Checkout</a>
            </div>
        </div>
    </div> 
    
{% endblock %}