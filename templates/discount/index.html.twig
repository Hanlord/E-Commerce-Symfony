{% extends 'base.html.twig' %}

{% block title %}Discount{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="my-5">Discount</h1>
  <a href="{{ path('app_discount_new') }}" class="btn create-btn">Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>DiscountType</th>
                <th>Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for discount in discounts %}
            <tr>
                <td>{{ discount.id }}</td>
                <td>{{ discount.name }}</td>
                <td>{{ discount.discountType }}</td>
                <td>{{ discount.amount }}</td>
                <td>
                    <a href="{{ path('app_discount_show', {'id': discount.id}) }}" class="btn details-btn">Details</a>
                    <a href="{{ path('app_discount_edit', {'id': discount.id}) }}" class="btn edit-btn">Edit</a>
                     {{ include('discount/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  
       </div>
{% endblock %}
