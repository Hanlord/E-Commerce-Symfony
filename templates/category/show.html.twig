{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div class="container my-5" style="min-height:68vh">
    <h1 class="my-5">Category</h1>

    <table class="table w-50">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>

   

    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn edit-btn">Edit</a>
    {{ include('category/_delete_form.html.twig') }}
     <a href="{{ path('app_category_index') }}" class="fs-4">back to list</a>
     </div>
{% endblock %}
